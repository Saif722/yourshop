.row.signup_block.text-center
  %h1 Sign up
  .container
    .row
      .col-md-12
        = form_for(@shop) do |f|
          .col-md-12
            = f.email_field :email, placeholder: "Enter your email address", class: "form-control"
          .col-md-12
            = f.password_field :password, placeholder: "Enter your password", class: "form-control"
          .col-md-12
            = f.password_field :password_confirmation , placeholder: "Re-Enter your password to confirm", class: "form-control"
          .col-md-12
            = f.submit "Create my account", class: "btn btn-primary"
